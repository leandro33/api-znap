{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "lib": ["ES2022"],
      "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules"]
  }
  